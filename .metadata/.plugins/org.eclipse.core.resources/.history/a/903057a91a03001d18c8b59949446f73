package chapter02;

import java.util.Scanner;

public class GradingSwitch {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		char grade;
		System.out.print("점수를 입력하세요 (0~100) >> ");
		int score = scan.nextInt();
		
		switch (score) {
		case 100:
			grade = 'A';
			break;
		case 90:
			grade = 'B';
			break;
		case 80:
			grade = 'C';
			break;
			
		//값이 나오지 않으면 default값이 나온다.
		default:
			break;
		}
	}

}
