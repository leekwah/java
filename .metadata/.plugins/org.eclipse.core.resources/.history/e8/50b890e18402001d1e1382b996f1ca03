package chapter02;

public class RandomNumber {
	public static void main(String[] args) {
		double n = rollDie();
		System.out.println(n); // 0~9까지의 수
		System.out.println(n+1); // 1~10까지의 수
	}
	// 반환타입은 double이다.
	// 메소드명은 rollDie이다.
	public static double rollDie() {
		// random은 double타입이다. (그렇기 때문에 0과 1 사이의 실수를 반환한다.)
		// 변수 x의 값으로 넣는다.
		double x = 6 * Math.random();
		// int temp를 x에다가 넣는다.
		int tmp = (int)x;
		// 타입이 맞지 않기 때문에, return이 바로 안된다.
		return tmp + 1;
	}
}
