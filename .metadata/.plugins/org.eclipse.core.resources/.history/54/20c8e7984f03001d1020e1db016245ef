		int count = 0, sum = 0;
		
		Scanner scan = new Scanner(System.in);
		System.out.println("정수를 입력하고 마지막에 -1을 입력하세요.");
		
		int n = scan.nextInt();
		// n이 -1이 아닐 때 까지 반복
		while (n != -1) {
			
		}
		
		scan.close();
	}
}
