package chapter03;

import java.util.Scanner;

public class InputException {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("정수 3개를 입력하세요 ");
		int sum = 0, n =0;
		
		for (int i = 0; i < 3; i++) {
			System.out.println(i+">>");
			n = scan.nextInt();
			sum += n;
		}
		
		System.out.println("합은 "+sum);
		scan.close();
	}

}
